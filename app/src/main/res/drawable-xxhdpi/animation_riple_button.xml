<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/white"
    >
    <item  android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/white" >
            </solid>

            <!-- Color y ancho del borde del elemento -->
            <stroke
                android:width="2dp"
                android:color="@color/white" >
            </stroke>

            <!-- Si queremos añadir algún padding -->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <!-- Aquí indicamos el radio a aplicar a las esquinas -->
            <corners
                android:radius="12dp"   >
            </corners>
        </shape>

    </item>
    <item  android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/colorAccent"
                >
            </solid>

            <!-- Color y ancho del borde del elemento -->
            <stroke
                android:width="2dp"
                android:color="@color/colorAccent" >
            </stroke>

            <!-- Si queremos añadir algún padding -->
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <!-- Aquí indicamos el radio a aplicar a las esquinas -->
            <corners
                android:radius="12dp"   >
            </corners>
        </shape>

    </item>
</ripple>